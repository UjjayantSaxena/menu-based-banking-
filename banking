			break;
		}
		case 3:{
			int w;
			printf("enter amount for withdrawal\n");
			scanf("%d", &w);
			if(w<=2){
				printf("Rs. %d has been withrawed\n", w);
	            printf("now your available balance is %d\n",2-w);
			}else{
				printf("insufficient balance\n");
			}
			break;
