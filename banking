			int t;
			printf("enter your amount\n");
			scanf("%d", &t);
			printf("now your balance is %d", t+2);
			break;
		}
		case 3:{
			int u;
			printf("enter amount for withdrawal\n");
			scanf("%d", &u);
			if(u<=2){
				printf("Rs. %d has been withrawed\n", u);
	            printf("now your available balance is %d\n",2-u);
			}else{
				printf("insufficient balance\n");
			}
			break;
		}
	}   
	break;
}
case 3:{
int c;
	printf("perss 1 for balance check \n");
    printf("press 2 for depositing\n");
    printf("press 3 for withdrawal\n");
	scanf("%d",&c);
	switch(c){
		case 1:{
			printf("your available balance is Rs. 2\n");
			break;
		}
		case 2:{
			int v;
			printf("enter your amount\n");
			scanf("%d", &v);
